# Build Stage
FROM php:8.2-fpm-alpine AS build

# Add non-root user with home directory
RUN addgroup -S -g 2024 appgroup && adduser -S -u 2024 -G appgroup -h /home/appuser appuser

# Install build dependencies and PHP extensions
RUN apk update && apk add --no-cache \
    build-base \
    libpng-dev \
    libjpeg-turbo-dev \
    libwebp-dev \
    freetype-dev \
    libzip-dev \
    oniguruma-dev \
    libxpm-dev \
    curl zip unzip git bash fcgi \
    && docker-php-ext-configure gd --with-freetype --with-jpeg --with-webp \
    && docker-php-ext-install -j$(nproc) gd pdo pdo_mysql mbstring zip exif pcntl bcmath opcache

# Install Composer
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Set permissions for Laravel directories
RUN chown -R appuser:appgroup /var/www

# Runtime Stage
FROM php:8.2-fpm-alpine AS runtime

# Install runtime dependencies (no build tools)
RUN apk --no-cache add \
    libpng libjpeg-turbo libwebp freetype libzip libxpm curl git bash fcgi nodejs npm

# Copy Composer binary and PHP extensions from build stage
COPY --from=build /usr/local/lib/php/extensions /usr/local/lib/php/extensions
COPY --from=build /usr/local/etc/php/conf.d /usr/local/etc/php/conf.d
COPY --from=build /usr/local/bin/composer /usr/local/bin/composer

# Copy user and group information from the builder stage
COPY --from=build /etc/passwd /etc/passwd
COPY --from=build /etc/group /etc/group

# Create the home directory for appuser and set ownership
RUN mkdir -p /home/appuser && chown -R appuser:appgroup /home/appuser

# Set permissions and switch to appuser user
RUN chown -R appuser:appgroup /var/www && chmod -R 755 /var/www

USER appuser

# Expose port 9000 and start php-fpm
EXPOSE 9000

CMD ["php-fpm"]
